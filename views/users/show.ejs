<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container user user-show">
	  <div class="buttons">
	  	<a href="/users" class="btn btn-default">Back</a>
	  	<% if(isAuthenticated && currentUser.id == user.id){  %>
	  	<a href="/users/<%= user.username %>/edit" class="btn btn-default">Edit</a>
	  	<% } %>
	  </div>

	  <form action="/users" method="post" class="user-form form-horizontal">
		 	<div class="contentBox">
		 		<h3 class="contentBoxTop"><%= user.username %></h3>
		 		<fieldset disabled>
			 		<div class="form-group">
			 			<label for="name" class="col-sm-3">Name</label>
			 			<div class="col-sm-9">
			 				<input type="text" class="form-control" id="name" name="name" value="<%= user.name %>">
			 			</div>
			 		</div>
			 		<div class="form-group">
			 			<label for="email" class="col-sm-3">Email</label>
			 			<div class="col-sm-9">
			 				<input type="text" class="form-control" id="email" name="email" value="<%= user.email %>">
			 			</div>
			 		</div>
		 		</fieldset>
		 	</div>
	 	</form>
  </div>
</body>
</html>